<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="CavePlantBase">
        <defName>Greystool</defName>

        <label>greystool</label>
        <description>A variant of glowstool, cultivated for faster food production. It smells just as bad, but no longer glows.</description>

        <graphicData>
            <texPath>Things/Plant/Glowstool</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>

        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Beauty>-2</Beauty>
            <Nutrition>0.01</Nutrition> <!-- somewhere in the inheritance, this is RawBad food-preferability, which needs > 0 -->
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>10</pathCost>
        <ingestible/>
        <plant>
            <visualSizeRange>0.4~0.7</visualSizeRange>
            <maxMeshCount>4</maxMeshCount>

            <sowResearchPrerequisites>
                <li>MushroomsEdibleFast</li>
            </sowResearchPrerequisites>
            <sowMinSkill>10</sowMinSkill> <!-- like devil? strawberries are 5 for safe-food, healroot is 8, and this throughput should be like corn with a short winter (all-year corn is faster) -->
            <sowTags>
                <li>MushroomPlanter</li>
            </sowTags>
            <fertilityMin>0.01</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>30</growDays>
            <harvestYield>20</harvestYield>
            <harvestedThingDef>RawFungus</harvestedThingDef>
            <harvestTag>Standard</harvestTag>
            <dieIfLeafless>true</dieIfLeafless>
            <topWindExposure>0.05</topWindExposure>
            <wildClusterRadius>3</wildClusterRadius>
            <wildClusterWeight>5</wildClusterWeight>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>
</Defs>
